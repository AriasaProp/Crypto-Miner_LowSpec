<resources>
    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowBackground">@drawable/main_background</item>
    </style>
    
    <style name="BaseTheme" parent="The.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:colorPrimary">@android:color/background_light</item>
        <item name="android:colorPrimaryDark">@android:color/grey</item>
        <item name="android:colorAccent">@android:color/green</item>
    </style>

    <style name="OwnSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress_style</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:splitTrack">false</item>
    </style>
    
    
</resources>
