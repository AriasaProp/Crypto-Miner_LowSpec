<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.ariasaproject.cmls"
    android:padding="6dp"
    android:orientation="vertical" >
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/server_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        app:helperText="@string/helpertext_server"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Pool Server">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/server_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textUri"
            android:text="stratum+tcp://us2.litecoinpool.org" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/port_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:helperText="@string/helpertext_port"
            app:helperTextTextColor="@android:color/holo_red_dark"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintStart_toEndOf="@id/server_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Pool Port">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/port_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="number"
                android:text="3333" />
        </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/server_container"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Username">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/user_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textUri"
            android:text="Ariasa.test" />
    </com.google.android.material.textfield.TextInputLayout>
    <!-- style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" -->
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pass_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintTop_toBottomOf="@id/server_container"
            app:layout_constraintStart_toEndOf="@id/user_container"
            app:layout_constraintEnd_toStartOf="parent"
            app:passwordToggleEnabled="true"
            android:hint="Password">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textPassword"
                android:text="123" />
        </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:id="@+id/thread_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/user_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="1">
        <androidx.appcompat.widget.AppCompatTextView
            android:background="@drawable/round_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Threads: " />
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/threadSeek"
            android:min="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thread_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="01" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/show_userInput"
        android:background="@drawable/round_fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:visibility="gone"
        android:gravity="left"
        android:singleLine="false"
        app:layout_constraintTop_toBottomOf="@id/thread_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Pool Mining Information" />
    <LinearLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/show_userInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal" >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_textview_speed" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/status_textView_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 h/s"
            android:textColor="@android:color/holo_green_dark" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/status2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/status_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="1">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepted:" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/status_textView_accepted"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejected:" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/status_textView_rejected"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/settings_checkBox_keepscreenawake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/status2_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/checkbox_keepscreenawake" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_startmine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:background="@drawable/button_start_mine"
        android:onClick="toStartMining"
        app:layout_constraintTop_toBottomOf="@id/settings_checkBox_keepscreenawake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/button_startmine" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_stopmine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:enabled="false"
        android:background="@drawable/button_stop_mine"
        android:onClick="toStopMining"
        app:layout_constraintTop_toBottomOf="@id/button_startmine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/button_stopmine" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/console_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_stopmine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Console:" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/console_view"
        app:layout_constraintTop_toBottomOf="@id/console_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
